\long\def\@makecaption#1#2{%
  \def\@tempa{table}%
  \ifx\@captype\@tempa
    % Table caption: space above and below
    \vskip 0.5em
    \setbox\@tempboxa\hbox{\small {\bf #1.} #2}
    \ifdim \wd\@tempboxa >\hsize
      {\small {\bf #1.} #2}
    \else
      \hbox to\hsize{\hfil\box\@tempboxa\hfil}
    \fi
    \vskip 1em
  \else
    % Figure caption: space above only
    \vskip 1em
    \setbox\@tempboxa\hbox{\small {\bf #1.} #2}
    \ifdim \wd\@tempboxa >\hsize
      {\small {\bf #1.} #2}
    \else
      \hbox to\hsize{\hfil\box\@tempboxa\hfil}
    \fi
  \fi
}

